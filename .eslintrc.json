{
    "root": true,
    "extends": ["airbnb", "prettier", "react-app"],
    "settings": {
      "import/core-modules": ["gatsby"]
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "globals": {
      "graphql": true,
      "jsx": true
    },
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": ["Link"],
          "specialLink": ["to"],
          "aspects": ["noHref", "invalidHref", "preferButton"]
        }
      ]
    }
  }